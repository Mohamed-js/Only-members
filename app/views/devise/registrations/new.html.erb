
<div class="m-auto center">
<h2 class="text-center" >Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-label">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"form-control my-2"  %>
  </div>

  <div class="field form-label">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email",class:"form-control my-2" %>
  </div>

  <div class="field form-label">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control my-2"  %>
  </div>

  <div class="field form-label">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control my-2"  %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary my-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>